@model Project2.Models.ManageSettingsViewModel
@using Microsoft.Owin.Security
@{
    ViewBag.Title = "Manage your settings ";

}
<link href='https://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
@*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">*@


<!--***************************************************** CSS *********************************************-->

<style>

    *, *:before, *:after {
        box-sizing: border-box;
    }

    html {
        overflow-y: scroll;
    }

    body {
        background: #c1bdba;
        /*font-family: 'Titillium Web', sans-serif;*/
    }

    main {
        /*font-family: 'Open Sans', Helvetica, Arial, sans-serif;*/
        font-family: 'Titillium Web', sans-serif;
    }

    a {
        text-decoration: none;
        color: #1ab188;
        transition: .5s ease;
    }

        a:hover {
            color: #179b77;
        }

    .form {
        border-radius: 15px 50px;
        border: groove;
        background: rgba(21, 13, 44, 0.68);
        padding: 40px;
        /*width: 800px;*/
        max-width: 800px;
        margin: 40px auto;
        box-shadow: 0 4px 10px 4px rgba(19, 35, 47, 0.3);
        max-height: 800px;
        height: 500px;
        min-width: 270px;
    }

    .tab-group {
        list-style: none;
        padding: 0;
        margin: 0 0 40px 0;
    }

        .tab-group:after {
            content: "";
            display: table;
            clear: both;
        }

        .tab-group li a {
            display: block;
            text-decoration: none;
            padding: 15px;
            background: rgba(160, 179, 176, 0.25);
            color: #a0b3b0;
            font-size: 20px;
            float: left;
            width: 33%;
            text-align: center;
            cursor: pointer;
            transition: .5s ease;
        }

            .tab-group li a:hover {
                background: #9370DB;
                color: #ffffff;
            }

        .tab-group .active a {
            background: #9370DB;
            color: #ffffff;
        }

    .tab-content > div:nth-last-child(2) {
        display: none;
    }

    .tab-content > div:last-child {
        display: none;
    }

    h1 {
        text-align: center;
        color: #ffffff;
        font-weight: 400;
    }

    label {
        position: absolute;
        -webkit-transform: translateY(6px);
        transform: translateY(6px);
        left: 13px;
        color: white;
        transition: all 0.25s ease;
        -webkit-backface-visibility: hidden;
        pointer-events: none;
        font-size: 22px;
    }

        label .req {
            margin: 2px;
            color: white;
        }

        label.active {
            -webkit-transform: translateY(70px);
            transform: translateY(70px);
            left: 2px;
            font-size: 14px;
        }

            label.active .req {
                opacity: 0;
            }

        label.highlight {
            color: #ffffff;
        }

    input, textarea {
        border: 1px solid #ddd;
        font-size: 22px;
        display: block;
        width: 100%;
        height: 130%;
        padding: 5px 10px;
        background: none;
        background-image: none;
        border: 1px solid white;
        color: #ffffff;
        border-radius: 0;
        transition: border-color .25s ease, box-shadow .25s ease;
        padding: 12px 16px;
        border-radius: 0.25rem;
        transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    input:focus, textarea:focus {
        outline: 0;
        border-color: white;
        border-radius: 0.25rem;
        transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    textarea {
        border: 2px solid #a0b3b0;
        resize: vertical;
        text-align: center;
        border-radius: 0.25rem;
    }


    .field-wrap {
        position: relative;
        margin-bottom: 40px;
    }

    .top-row:after {
        content: "";
        display: table;
        clear: both;
    }

    .top-row > div {
        float: left;
        width: 48%;
        margin-right: 4%;
    }

        .top-row > div:last-child {
            margin: 0;
        }

    #buttonchange:hover, #buttonchange:focus {
        background: #179b77;
    }



    .forgot {
        margin-top: -20px;
        text-align: right;
    }

    /***************** Arrows ***************/
    #triangle-left {
        width: 0;
        height: 0;
        border-top: 50px solid transparent;
        border-right: 100px solid #4d5390;
        border-bottom: 50px solid transparent;
        float: left;
    }

    #triangle-right {
        width: 0;
        height: 0;
        border-top: 50px solid transparent;
        border-left: 100px solid #4d5390;
        border-bottom: 50px solid transparent;
        float: right;
    }

    .manage-arrows {
        padding-top: 14rem;
    }

    #to-avatar {
        opacity: 0;
    }

    #triangle-left:hover {
        border-top: 50px solid transparent;
        border-right: 100px solid #929bfb;
        border-bottom: 50px solid transparent;
    }

    #triangle-right:hover {
        border-top: 50px solid transparent;
        border-left: 100px solid #929bfb;
        border-bottom: 50px solid transparent;
    }

    #to-change-password {
        text-align: right;
        opacity: 0;
    }

</style>
<!--************************************************************************************ HTML *********************************************-->
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 manage-arrows">
            <div id="to-avatar" class="col-sm-12">To Avatar</div>
            <div id="triangle-left" onclick="location.href= '@Url.Action("Avatar","Manage")'"></div>
        </div>

    
    <div class="form col-sm-6">

        <ul class="tab-group">
            <li class="tab active"><a href="#newmail"> Email</a></li>
            <li class="tab"><a href="#newusername"> Username</a></li>
            <li class="tab"><a href="#newphonenumber"> Phonenumber</a></li>
        </ul>

        <div class="tab-content">
            <div id="newmail">
                <h1>Insert your new Email</h1>
                @using (Html.BeginForm("ManageSettings", "Manage", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationMessageFor(model => model.Email)
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.UserName)
                    @Html.HiddenFor(model => model.PhoneNumber)
                    
                    <div class="field-wrap">
                        <p style="margin-left: 1rem;">@Model.Email</p>
                        <label>
                            Email Address<span class="req">*</span>
                        </label>
                        @*@Html.LabelFor(model => model.Email)*@
                        @*@Html.EditorFor(model => model.Email)*@
                        <input type="Email" name="Email" required autocomplete="off" />
                        <p style="color: red;">@TempData["EmailStatusMessage"]</p>
                        @*<input type="email" required autocomplete="off" />*@
                    </div>

                    <input type="submit" value="Change Email" class="btn btn-default" id="buttonchange" />
                }
            </div>

            <div id="newusername">
                <h1>Insert your new Username</h1>

                @using (Html.BeginForm("ManageSettings", "Manage", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationMessageFor(model => model.UserName)
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.Email)
                    @Html.HiddenFor(model => model.PhoneNumber)
                    
                    <div class="field-wrap">
                        <p style="margin-left: 1rem;">@Model.UserName</p>
                        <label>
                            Username<span class="req">*</span>
                        </label>
                        <input type="text" name="UserName" required autocomplete="off" />
                        <p style="color: red;">@TempData["UserNameStatusMessage"]</p>
                    </div>

                    <!-- <p class="forgot"><a href="#">Forgot Password?</a></p>  -->

                    <input type="submit" value="Change Username" class="btn btn-default" id="buttonchange" />
                }

            </div>

            <div id="newphonenumber">
                <h1>Insert your new Phonenumber</h1>

                @using (Html.BeginForm("ManageSettings", "Manage", FormMethod.Post, new { role = "form" }))
                {

                    @Html.AntiForgeryToken()

                    @Html.ValidationMessageFor(model => model.PhoneNumber)
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.UserName)
                    @Html.HiddenFor(model => model.Email)
                    <div class="field-wrap">
                        <p style="margin-left: 1rem;">@Model.PhoneNumber</p>
                        <label>
                            Phone Number<span class="req">*</span>
                        </label>
                        <input type="tel" name="PhoneNumber" required autocomplete="off" />
                    </div>

                    <input type="submit" value="Change PhoneNumber" class="btn btn-default" id="buttonchange" />

                }

            </div>
        </div><!-- tab-content -->

    </div> <!-- /form -->
        <div class="col-sm-3 manage-arrows">
            <div id="to-change-password" class="col-sm-12">To Password</div>
            <div id="triangle-right" onclick="location.href= '@Url.Action("ChangePassword","Manage")'"></div>
        </div>
</div>
</div>
    <!--************************************************************************************ JavaScript *********************************************-->

    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script>

        $('.form').find('input, textarea').on('keyup blur focus', function (e) {

            var $this = $(this),
                label = $this.prev('label');

            if (e.type === 'keyup') {
                if ($this.val() === '') {
                    label.removeClass('active highlight');
                } else {
                    label.addClass('active highlight');
                }
            } else if (e.type === 'blur') {
                if ($this.val() === '') {
                    label.removeClass('active highlight');
                } else {
                    label.removeClass('highlight');
                }
            } else if (e.type === 'focus') {

                if ($this.val() === '') {
                    label.removeClass('highlight');
                }
                else if ($this.val() !== '') {
                    label.addClass('highlight');
                }
            }

        });

        $('.tab a').on('click', function (e) {

            e.preventDefault();

            $(this).parent().addClass('active');
            $(this).parent().siblings().removeClass('active');

            target = $(this).attr('href');

            $('.tab-content > div').not(target).hide();

            $(target).fadeIn(600);

        });

        $('#triangle-left').hover(function () {
            $('#to-avatar').css('opacity', 1);
        })
        $('#triangle-left').mouseout(function () {
            $('#to-avatar').css('opacity', 0);
        })

        $('#triangle-right').hover(function () {
            $('#to-change-password').css('opacity', 1);
        })
        $('#triangle-right').mouseout(function () {
            $('#to-change-password').css('opacity', 0);
        })
    </script>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
